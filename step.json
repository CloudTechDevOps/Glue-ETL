{
  "Comment": "GCP to S3 to RDS Glue pipeline with failure notification",
  "StartAt": "GCP_Glue_Job",
  "States": {
    "GCP_Glue_Job": {
      "Type": "Task",
      "Resource": "arn:aws:states:::glue:startJobRun.sync",
      "Parameters": {
        "JobName": "gcp"
      },
      "Next": "S3_to_S3_Glue",
      "Catch": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "Next": "Send_Failure_Notification"
        }
      ]
    },
    "S3_to_S3_Glue": {
      "Type": "Task",
      "Resource": "arn:aws:states:::glue:startJobRun.sync",
      "Parameters": {
        "JobName": "s3-s3"
      },
      "Next": "S3_to_RDS_Glue",
      "Catch": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "Next": "Send_Failure_Notification"
        }
      ]
    },
    "S3_to_RDS_Glue": {
      "Type": "Task",
      "Resource": "arn:aws:states:::glue:startJobRun.sync",
      "Parameters": {
        "JobName": "s3-rds"
      },
      "End": true,
      "Catch": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "Next": "Send_Failure_Notification"
        }
      ]
    },
    "Send_Failure_Notification": {
      "Type": "Task",
      "Resource": "arn:aws:states:::sns:publish",
      "Parameters": {
        "TopicArn": "arn:aws:sns:us-east-1:117601052645:veera",
        "Message": "One or more Glue jobs in the pipeline have failed.",
        "Subject": "Glue Pipeline Failure Notification"
      },
      "End": true
    }
  }
}
